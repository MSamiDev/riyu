datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Client {
  appointments  Appointment[]
  createdAt     DateTime       @default(now())
  email         String?
  firstName     String?
  id            String         @id @default(cuid())
  lastName      String?
  password      String?
  subscriptions Subscription[]
  updatedAt     DateTime       @updatedAt
  username      String?
}

model Blog {
  author      String?
  content     String?
  createdAt   DateTime  @default(now())
  id          String    @id @default(cuid())
  publishedOn DateTime?
  title       String?
  updatedAt   DateTime  @updatedAt
}

model Appointment {
  admin     String?
  client    Client?                @relation(fields: [clientId], references: [id])
  clientId  String?
  createdAt DateTime               @default(now())
  date      DateTime?
  id        String                 @id @default(cuid())
  status    EnumAppointmentStatus?
  updatedAt DateTime               @updatedAt
}

model Subscription {
  appointmentsLeft Int?
  client           Client?   @relation(fields: [clientId], references: [id])
  clientId         String?
  createdAt        DateTime  @default(now())
  id               String    @id @default(cuid())
  planName         String?
  updatedAt        DateTime  @updatedAt
  validTill        DateTime?
}

model User {
  createdAt DateTime @default(now())
  email     String?  @unique
  firstName String?
  id        String   @id @default(cuid())
  lastName  String?
  password  String
  roles     Json
  updatedAt DateTime @updatedAt
  username  String   @unique
}

enum EnumAppointmentStatus {
  Option1
}
